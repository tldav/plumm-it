{
	"name": "charity-tracker",
	"version": "0.1.0",
	"description": "",
	"main": "server/server.js",
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"axios": "^0.18.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"if-env": "^1.0.4",
		"morgan": "^1.10.0",
		"mysql": "^2.18.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"concurrently": "^4.1.0",
		"nodemon": "^1.18.7",
		"dotenv": "^8.2.0"
	},
	"scripts": {
		"start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev && NODE_ENV=dev",
		"start:prod": "node server/server.js",
		"start:dev": "concurrently \"nodemon --ignore 'client/*' && nodemon -r dotenv/config\" \"npm run client\"",
		"client": "cd client && npm run start",
		"seed": "node scripts/seedDB.js",
		"install": "cd client && npm install",
		"build": "cd client && npm run build",
		"heroku-postbuild": "npm run build",
		"dev": "npx nodemon server/server.js -w server"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
